@model AspnetCoreMvcFull.ViewModels.HazardManagement.HazardViewModel
@{
  ViewData["Title"] = "Delete Hazard";
  Layout = "_ContentNavbarLayout";
}

<div class="card mb-4">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h5 class="mb-0">Delete Hazard</h5>
  </div>
  <div class="card-body">
    <div class="alert alert-warning" role="alert">
      <h6 class="alert-heading mb-1">Confirm Deletion</h6>
      <p class="mb-0">Are you sure you want to delete this hazard? This action cannot be undone.</p>
    </div>

    <dl class="row mb-4">
      <dt class="col-sm-3">ID</dt>
      <dd class="col-sm-9">@Model.Id</dd>

      <dt class="col-sm-3">Name</dt>
      <dd class="col-sm-9">@Model.Name</dd>
    </dl>

    <form asp-action="Delete" method="post">
      <div class="d-flex justify-content-between">
        <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
        <button type="submit" class="btn btn-danger">Delete</button>
      </div>
    </form>
  </div>
</div>
