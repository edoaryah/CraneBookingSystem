@{
  TempData.Keep();
  string? currentPage = ViewContext.HttpContext.Request.Path;
}

<!-- Menu -->
@* ! Do this simple *@
<aside id="layout-menu" class="layout-menu menu-vertical menu bg-menu-theme">

  @* ! Hide app brand if navbar-full *@
  <div
    class='app-brand @((@ViewData["navbarFull"] != null && Convert.ToBoolean(@ViewData["navbarFull"])) ? "d-xl-none" : "")'>
    <a asp-controller="Dashboards" asp-action="Index" class="app-brand-link">
      <span class="app-brand-logo kpc">
        @await Html.PartialAsync("../_Partials/_KaltimPrimaCoal")
      </span>
      @* <span class="app-brand-text demo menu-text fw-bold ms-2">@TempData.Peek("appName")</span> *@
    </a>

    <a href="javascript:void(0);" class="layout-menu-toggle menu-link text-large ms-auto d-block d-xl-none">
      <i class="bx bx-chevron-left bx-sm d-flex align-items-center justify-content-center"></i>
    </a>
  </div>

  <div class="menu-inner-shadow"></div>

  @* ! Full version menu-items *@
  <ul class="menu-inner py-1">

    <!-- Menu -->
    @* <li class="menu-header small text-uppercase"><span class="menu-header-text">Menu</span></li> *@

    <!-- Dashboard -->
    <li class='menu-item@(currentPage == "/" ? " active" : "")'>
      <a asp-controller="Dashboards" asp-action="Index" class="menu-link">
        <i class="menu-icon tf-icons bx bx-home-smile"></i>
        <div class="text-truncate" data-i18n="Dashboards">Dashboards</div>
      </a>
    </li>
    <li class='menu-item@(currentPage == "/Booking" ? " active" : "")'>
      <a asp-controller="Booking" asp-action="Index" class="menu-link">
        <i class="menu-icon tf-icons bx bx-detail"></i>
        <div class="text-truncate" data-i18n="Cards">Booking Form</div>
      </a>
    </li>
    <li class='menu-item@(currentPage == "/RoleManagement" ? " active" : "")'>
      <a asp-controller="RoleManagement" asp-action="Index" class="menu-link">
        <i class="menu-icon tf-icons bx bx-shield"></i>
        <div class="text-truncate" data-i18n="Roles">Role Management</div>
      </a>
    </li>
    <li class='menu-item@(currentPage == "/CraneManagement" ? " active" : "")'>
      <a asp-controller="CraneManagement" asp-action="Index" class="menu-link">
        <i class="menu-icon tf-icons bx bx-shield"></i>
        <div class="text-truncate" data-i18n="Roles">Crane Management</div>
      </a>
    </li>

    <li class='menu-item@(currentPage.StartsWith("/Auth") ? " active open" : "")'>
      <a href="javascript:void(0);" class="menu-link menu-toggle">
        <i class="menu-icon tf-icons bx bx-lock-open-alt"></i>
        <div>Authentications</div>
      </a>
      <ul class="menu-sub">
        <li class='menu-item@(currentPage == "/Auth/LoginBasic" ? " active" : "")'>
          <a asp-controller="Auth" asp-action="LoginBasic" class="menu-link" target="_blank">
            <div>Login</div>
          </a>
        </li>
        <li class='menu-item@(currentPage == "/Auth/RegisterBasic" ? " active" : "")'>
          <a asp-controller="Auth" asp-action="RegisterBasic" class="menu-link" target="_blank">
            <div>Register</div>
          </a>
        </li>
        <li class='menu-item@(currentPage == "/Auth/ForgotPasswordBasic" ? " active" : "")'>
          <a asp-controller="Auth" asp-action="ForgotPasswordBasic" class="menu-link" target="_blank">
            <div>Forgot Password</div>
          </a>
        </li>
      </ul>
    </li>

    <!-- Misc -->
    <li class="menu-header small text-uppercase"><span class="menu-header-text">Misc</span></li>
    <li class="menu-item">
      <a href='@TempData.Peek("support")' target="_blank" class="menu-link">
        <i class="menu-icon tf-icons bx bx-support"></i>
        <div>Support</div>
      </a>
    </li>
    <li class="menu-item">
      <a href='@TempData.Peek("documentation")' target="_blank" class="menu-link">
        <i class="menu-icon tf-icons bx bx-file"></i>
        <div>Documentation</div>
      </a>
    </li>
  </ul>

</aside>
<!-- / Menu -->
